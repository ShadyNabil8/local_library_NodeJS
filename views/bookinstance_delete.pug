extends layout

block content

    h1 #{title}: #{book_instance.book.title}

    p [strong imprint: #{book_instance.imprint}]

    p Do you really want to delete this copy?

    form(method='POST')
        div.form-group
        input#bookinstanceid.form-control(type='hidden' name='bookinstanceid', value=book_instance._id )

        button.btn.btn-primary(type='submit') Delete
